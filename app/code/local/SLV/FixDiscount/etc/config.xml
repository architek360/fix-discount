<config>
    <modules>
        <SLV_FixDiscount>
            <version>0.1.0</version>
        </SLV_FixDiscount>
    </modules>
    <admin>
        <routers>
            <fix_discount>
                <use>admin</use>
                <args>
                    <module>SLV_FixDiscount</module>
                    <frontName>fix_discount</frontName>
                </args>
            </fix_discount>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <fixdiscount translate="title" module="fix_discount">
                                            <title>Fixed Discount</title>
                                        </fixdiscount>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <helpers>
            <fix_discount>
                <class>SLV_FixDiscount_Helper</class>
            </fix_discount>
        </helpers>
        <models>
            <fix_discount>
                <class>SLV_FixDiscount_Model</class>
            </fix_discount>
        </models>
        <resources>
            <fix_discount_setup>
                <setup>
                    <module>SLV_FixDiscount</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fix_discount_setup>
            <fix_discount_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fix_discount_write>
            <fix_discount_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fix_discount_read>
        </resources>
        <sales>
            <quote>
                <totals>
                    <fix_discount>
                        <class>fix_discount/quote_discount</class>
                        <after>subtotal,shipping,discount</after>
                        <before>grand_total</before>
                    </fix_discount>
                </totals>
                <nominal_totals>
                    <fix_nominal_discount>
                        <class>fix_discount/quote_nominal_discount</class>
                        <sort_order>555</sort_order>
                    </fix_nominal_discount>
                </nominal_totals>
            </quote>
        </sales>
        <events>
            <sales_model_service_quote_submit_after>
                <observers>
                    <sales_convert_quote_item_to_order_item>
                        <type>singleton</type>
                        <class>fix_discount/observer</class>
                        <method>sales_model_service_quote_submit_after</method>
                    </sales_convert_quote_item_to_order_item>
                </observers>
            </sales_model_service_quote_submit_after>
        </events>
        <rewrite>
            <coupon_post>
                <from><![CDATA[#^/checkout/cart/(couponFix)#]]></from>
                <to>/fix_discount/cart/{$1}</to>
            </coupon_post>
        </rewrite>
    </global>
    <default>
        <fixdiscount>
            <fixdiscount>
                <active>0</active>
                <coupon_code>CUSTOM</coupon_code>
            </fixdiscount>
        </fixdiscount>
    </default>
</config>